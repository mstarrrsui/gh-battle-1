{
    // See http://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "eslint",
            "type": "shell",
            "command": ".\\node_modules\\.bin\\eslint . —ext .js —ext .jsx —cache",
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [
                "$eslint-stylish"   
            ]
        }
    ]
}